@model Team


@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-12">
            <div>
              <div class="card-header bg-light">
                Komanda üzvü əlavə et
              </div>
              <div class="card-body bg-white">
                <form method="post" enctype="multipart/form-data">
                      <span class="text-danger fw-bold mb-3">@Html.ValidationMessage("Error")</span>
                      <input type="hidden" name="Id" value="@Model.Id">
                      <div class="form-group">
                            <label asp-for="Name" for="simpleinput">Ad</label>
                            <input asp-for="Name" type="text" id="simpleinput" class="form-control" autocomplete="off">
                            <span class="text-danger" asp-validation-for="Name"></span>
                      </div>
                      <div class="form-group">
                            <label asp-for="Surname" for="simpleinput">Soyad</label>
                            <input asp-for="Surname" type="text" id="simpleinput" class="form-control" autocomplete="off">
                            <span class="text-danger" asp-validation-for="Surname"></span>
                      </div>
                      <div class="form-group">
                            <label asp-for="Position" for="simpleinput">Vəzifə</label>
                            <input asp-for="Position" type="text" id="simpleinput" class="form-control" autocomplete="off">
                            <span class="text-danger" asp-validation-for="Position"></span>
                      </div>
                      <div class="row" style="justify-content:space-between;align-items:center;">
                        <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Image" for="customFile">Şəkil əlavə et</label>
                                    <div class="custom-file">
                                        <input asp-for="Image" type="file" class="custom-file-input" id="customFile">
                                        <label class="custom-file-label" for="customFile"></label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Image"></span>
                                </div>
                        </div>
                      </div>
                    <div style="text-align:center" class="mt-5">
                        <button type="submit" class="btn btn-success me-2">Yadda saxla</button>
                        <a class="btn btn-dark" asp-action="index">Geri qayıt</a>
                    </div>
                </form>
              </div>
            </div>
          </div><!-- /.col --
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
  </div>
 </div>


