@model List<Car>



@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    <style>
        #tbody tr:nth-child(2){
            text-align:center;
        }

        .zoom {
          transition: transform .2s;
          margin: 0 auto;
        }

        .zoom:hover {
          -ms-transform: scale(1.5); /* IE 9 */
          -webkit-transform: scale(1.5); /* Safari 3-8 */
          transform: scale(1.5); 
        }
    </style>

}

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Avtomobillər</h1>
          </div>
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered">
                  <thead>
                  <tr>
                    <th>Id</th>
                    <th>Marka</th>
                    <th>Yaradılma tarixi</th>
                    <th>Əməliyyatlar</th>
                  </tr>
                  </thead>
                  <tbody>
                      @foreach (var item in Model)
                     {
                        if (@item.isDeleted==true)
                        {
                           <tr id="tbody">
                             <td>@item.Id</td>
                             <td>
                                 <div class="zoom">
                                     <img class="mx-2" width="70" height="50" src="~/assets/images/car/@item.CarImages.Find(i=>i.IsMain==true).ImageUrl"/>
                                     @item.Brand.Name @item.Name
                                 </div>
                             </td>
                             <td>@String.Format("{0:dd/MM/yyyy}",item.CreatedAt).ToString()</td>
                             <td class="text-center">
                                 <a asp-action="backup" asp-route-id="@item.Id" class="btn btn-sm btn-warning btn-rounded"><i class="fa fa-undo"></i></a>
                                 <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger btn-rounded"><i class="fa fa-xmark"></i></a>
                                 <a asp-action="detail" asp-route-id="@item.Id" class="btn btn-sm btn-primary btn-rounded"><i class="fa fa-info"></i></a>
                             </td>
                           </tr>
                        }
                     }
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->




@section Scripts{
    
   
}
