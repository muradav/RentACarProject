@model HeaderVM





      <header class="site-navbar site-navbar-target" role="banner">

        <div class="container">
          <div class="row align-items-center position-relative">

            <div class="col-2">
              <div class="site-logo">
                <a asp-controller="home" asp-action="index"><img src="~/assets/images/logo.png" width="150px" alt=""></a>
              </div>
            </div>

            <div class="col-7  text-center">
              
              <span class="d-inline-block d-lg-none"><a href="#" class=" site-menu-toggle js-menu-toggle py-5 "><span class="icon-menu h3 text-black"></span></a></span>

              <nav class="site-navigation text-right ml-auto d-none d-lg-block" role="navigation">
                <ul class="site-menu main-menu js-clone-nav ml-auto">
                  <li><a asp-controller="home" asp-action="index" class="nav-link"><strong>Əsas Səhifə</strong></a></li>
                  <li><a asp-controller="car" asp-action="index" class="nav-link"><strong>Avtomobil icarəsi</strong></a></li>
                  <!-- <li><a href="testimonials.html" class="nav-link">Bloq</a></li> -->
                  @*<li><a href="blog.html" class="nav-link"><strong>Bloq</strong></a></li>*@
                  <li><a asp-controller="about" asp-action="index" class="nav-link"><strong>Haqqımızda</strong></a></li>
                  <li><a asp-controller="contact" asp-action="index" class="nav-link"><strong>Əlaqə</strong></a></li>
                </ul>
              </nav>
            </div>
            <div class="col-3 text-sm-right dropdown show">
              <a role="button" class="btn" data-toggle="dropdown"> 
                @if (User.Identity.IsAuthenticated)
                {
                    if (Model.User.ImageUrl!=null)
                    {
                        <img src="~/assets/images/user/@Model.User.ImageUrl" style="width: 40px; border-radius:50%;" alt="">
                    }
                    else
                    {
                        <img src="~/assets/images/account.png" style="width: 40px; border-radius:50%;" alt="">
                    }
                        <span>@Model.User.Name @Model.User.Surname</span>
                }
                else
                {
                    <img src="~/assets/images/account.png" style="width: 40px;" alt="">
                }       
              </a>

              
                    @if (User.Identity.IsAuthenticated)
                    {
                       <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="margin-left:50px;">
                          <ul class="px-0 list-group" style="list-style:none;">
                             @if (User.IsInRole( "Admin"))
                             {
                             
                                <li><a class="dropdown-item" asp-area="admin" asp-controller="dashboard" asp-action="index">Admin panel</a></li>
                                <li><a class="dropdown-item" asp-controller="auth" asp-action="editprofile" asp-route-id="@Model.User.Id">Mənim hesabım</a></li>
                                <li><a class="dropdown-item" asp-controller="" asp-action="">İcarə etdiklərim</a></li>
                                <li><a class="dropdown-item" asp-controller="auth" asp-action="logout">Çıxış</a></li>
                             
                             }
                             else
                             {
                                <li><a class="dropdown-item" asp-controller="auth" asp-action="editprofile" asp-route-id="@Model.User.Id">Mənim hesabım</a></li>
                                <li><a class="dropdown-item" asp-controller="" asp-action="">İcarə etdiklərim</a></li>
                                <li><a class="dropdown-item" asp-controller="auth" asp-action="logout">Çıxış</a></li>
                             
                             }
                          </ul>
                       </div>

                    }
                    else
                    {
                          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <ul class="px-0 list-group" style="list-style:none;">
                                <li><a class="dropdown-item" asp-controller="auth" asp-action="login">Daxil Ol</a></li>
                                <li><a class="dropdown-item" asp-controller="auth" asp-action="register">Qeydiyyat</a></li>
                            </ul>
                          </div>
                    }
            </div>
          </div>
        </div>

      </header>
