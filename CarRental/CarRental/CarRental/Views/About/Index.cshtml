@model AboutVM


<div class="hero inner-page">
        
        <div class="container">
          <div class="row align-items-end ">
            <div class="col-lg-5">

              <div class="intro">
                <h1><strong>Haqqımızda</strong></h1>
                <div class="custom-breadcrumbs"><a asp-controller="home" asp-action="index">Əsas səhifə</a> <span class="mx-2">/</span> <strong>Haqqımızda</strong></div>
              </div>

            </div>
          </div>
        </div>
      </div>

    

    <div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 mb-5 mb-lg-0 order-lg-2">
            <img src="~/assets/images/@Model.Abouts.FirstOrDefault().ImageUrl" alt="Image" class="img-fluid rounded">
          </div>
          <div class="col-lg-4 mr-auto">
            <h2>@Model.Abouts.FirstOrDefault().Title</h2>
            <p>@Model.Abouts.FirstOrDefault().HeaderDesc</p>
            <p>@Model.Abouts.FirstOrDefault().Desc</p>
          </div>
        </div>
      </div>
    </div>

    <div class="site-section bg-light">
      <div class="container">
        <div class="row justify-content-center text-center mb-5 section-2-title">
          <div class="col-md-6">
            <h2 class="mb-4">Komandamız</h2>
          </div>
        </div>
        <div class="row align-items-stretch">

          @foreach (var item in Model.Teams)
         {
             if (item.isDeleted==false)
             {
                 <div class="col-lg-4 col-md-6 mb-5">
                 <div class="post-entry-1 h-100 person-1">
             
                     <img src="/assets/images/member/@item.ImageUrl" alt="Image"
                      class="img-fluid">
            
                   <div class="post-entry-1-contents">
                     <span class="meta">@item.Position</span>
                     <h2>@item.Name @item.Surname</h2>
                     @*<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa, sapiente.</p>*@
                   </div>
                 </div>
               </div>
             }
         }


        </div>
      </div>
    </div>

