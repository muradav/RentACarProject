@model LoginVM

<div class="hero inner-page">
        
  <div class="container">
    <div class="row align-items-end ">
      <div class="col-lg-5">

        <div class="intro">
          <h1><strong>Daxil Ol</strong></h1>
          <div class="custom-breadcrumbs"><a asp-controller="home" asp-action="index">Əsas səhifə</a> <span class="mx-2">/</span> <strong>Daxil ol</strong></div>
        </div>

      </div>
    </div>
  </div>
</div>

<section class="login-area pt-10 my-5">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <h4 class="allup-title"><strong>Daxil ol</strong></h4>
                    <form method="post">
                        <div class="single-form my-5">
                            <input asp-for="Email" placeholder="E-poçt " autocomplete="off" style="width:75%;">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="single-form my-4">
                            <input asp-for="Password" placeholder="Şifrə" style="width:75%;">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="custom-checkbox mt-30">
                            <input type="checkbox" id="account">
                            <label for="account">Məni xatırla</label>
                        </div>
                        <div class="single-form">
                            <button type="submit" class="btn btn-dark">Daxil ol</button>
                        </div>
                    </form>
                    <p class="mt-20"><a href="#">Şifrəni unutmusunuz?</a></p>
                    <p class="mt-10">Hesabınız yoxdur? <a asp-action="register">Qeydiyyatdan keç</a></p>
                </div>
            </div>
        </div>
    </div>
</section>