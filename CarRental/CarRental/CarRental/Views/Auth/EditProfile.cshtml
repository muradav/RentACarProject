@model User



<div class="hero inner-page">
  <div class="container">
    <div class="row align-items-end ">
      <div class="col-lg-5">
        <div class="intro">
          <h1><strong>İstifadəçi</strong></h1>
          <div class="custom-breadcrumbs"><a asp-controller="home" asp-action="index">Əsas səhifə</a> <span class="mx-2">/</span> <strong>İstifadəçi məlumatları</strong></div>
        </div>
      </div>
    </div>
  </div>
</div>


<section class="register-area pt-10 my-5">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <h4 class="allup-title">Istifadəçi məlumatları</h4>
                    <form method="post" enctype="multipart/form-data">
                        <span class="text-danger fw-bold mb-3">@Html.ValidationMessage("Error")</span>
                        <input type="hidden" asp-for="Id"/>  
                        <div class="row">
                            <div class="col-md-6">
                                    @if (Model.ImageUrl!=null)
                                    {
                                        <img src="~/assets/images/user/@Model.ImageUrl" 
                                        class="mt-2 mx-3"
                                        style="width: 200px; border-radius:50%;" 
                                        alt="">
                                    }
                                    else
                                    {
                                        <img src="~/assets/images/account.png" 
                                        class="mt-2 mx-3" 
                                        style="width: 200px; border-radius:50%;" 
                                        alt="">
                                    }
                                <div class="form-group mb-3">
                                    <label asp-for="Image" for="customFile">Şəkil əlavə et</label>
                                    <div class="custom-file">
                                        <input asp-for="Image" type="file" class="custom-file-input" id="customFile">
                                        <label class="custom-file-label" for="customFile"></label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Image"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="single-form my-4" style=" flex-direction: column; display: flex;">
                                    <label asp-for="Name" for="customFile">Ad</label>
                                    <input asp-for="Name" placeholder="Ad" autocomplete="off" style="width:75%;" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="single-form mb-4" style=" flex-direction: column; display: flex;">
                                    <label asp-for="Surname" for="customFile">Soyad</label>
                                    <input asp-for="Surname" placeholder="Soyad" autocomplete="off" style="width:75%;" />
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                                @*<div class="single-form mb-4" style=" flex-direction: column; display: flex;">
                                    <label asp-for="UserName" for="customFile">İstifadəçi adı</label>
                                    <input asp-for="UserName" placeholder="İstifadəçi adı" autocomplete="off" style="width:75%;" />
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>*@
                                <div class="single-form mb-4" style=" flex-direction: column; display: flex;">
                                    <label asp-for="Email" for="customFile">Elektron poçt</label>
                                    <input asp-for="Email" placeholder="Elektron poçt" autocomplete="off" style="width:75%;" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                 <div class="single-form mb-4" style=" flex-direction: column; display: flex;">
                                     <label asp-for="PhoneNumber" for="customFile">Telefon</label>
                                    <input asp-for="PhoneNumber" placeholder="Telefon" autocomplete="off" style="width:75%;" />
                                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                </div>
                                <div class="single-form">
                                    <button type="submit" class="btn btn-success btn-sm">Redaktə et</button>
                                    <button  asp-action="index" asp-controller="home" class="btn btn-dark btn-sm">Geri qayıt</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>